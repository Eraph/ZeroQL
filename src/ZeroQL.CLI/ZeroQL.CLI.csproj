<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <PackageId>ZeroQL.Cli</PackageId>
        <PackAsTool>true</PackAsTool>
        <Description>The ZeroQL CLI to generate C# classes from *.graphql files.</Description>
        <AssemblyName>zeroql</AssemblyName>
        <IsPackable>true</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="CliFx" Version="2.2.6"/>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\ZeroQL.Core\ZeroQL.Core.csproj"/>
    </ItemGroup>

</Project>
